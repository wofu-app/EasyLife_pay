<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@mipmap/bg_explorer"
             android:layout_width="match_parent"
             android:layout_height="match_parent"

              android:orientation="vertical"
             >
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="5dp"
            >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bg_global_logo"
                    android:contentDescription="@string/content_description" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机充值"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_global_left_normal"
            android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginRight="50dp"
    android:layout_marginLeft="50dp"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码:"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/phone_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"
            android:hint="请输入您要充值的手机号码"
            android:background="@drawable/selector_background_edit"
            android:singleLine="true"
            android:textColor="@color/black"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="11" />
</LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginLeft="50dp"
           android:layout_marginRight="50dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/black"
                   android:textSize="15sp"
                   android:gravity="center"
                   android:text="确认号码:"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/phone_tv_entry"
                   android:singleLine="true"
                   android:gravity="center"
                   android:paddingLeft="5dp"
                   android:textColor="@color/black"
                   android:background="@null"
                   />
       </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值类型:"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="center"/>
                <RadioGroup
                    android:id="@+id/phone_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/phone_rb_flow"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/selector_bg_radio"
                        android:button="@null"

                        android:textColor="#000000"
                        android:text="流量充值"
                        android:textSize="10dp" />

                    <RadioButton
                        android:id="@+id/phone_rb_fees"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/selector_bg_radio"
                        android:button="@null"
                        android:textColor="#000000"

                        android:text="话费充值"
                        android:textSize="10dp" />
                </RadioGroup>
            </LinearLayout>
            <LinearLayout  android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:layout_marginRight="50dp"
                           android:layout_marginLeft="50dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="支付金额：" />

                <TextView
                    android:id="@+id/phone_tv_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="0.00元" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_gravity="top"
                    android:text="充值套餐：" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/phone_tv_load"
                        style="@style/headline_text_style"
                        android:layout_height="35dp"
                        android:layout_gravity="top"
                        android:layout_marginBottom="15dp" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="50dp" >

                        <com.landicorp.android.wofupay.widget.MyRadioGroup
                            android:id="@+id/phone_mrg"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            app:child_layout="@layout/radiogrop_item"
                            app:child_margin_horizontal="10dp"
                            app:child_margin_vertical="15.0dip"
                            app:single_choice="true" >
                        </com.landicorp.android.wofupay.widget.MyRadioGroup>
                    </ScrollView>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout style="@style/button_layout_style" >

                <ImageButton
                    android:id="@+id/bt_cancle"
                    style="@style/left_button_style"
                    android:contentDescription="@string/content_description"
                    />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/bt_entry"
                    style="@style/right_button_style"
                    android:contentDescription="@string/content_description" />
            </LinearLayout>
        </LinearLayout>

</LinearLayout>



