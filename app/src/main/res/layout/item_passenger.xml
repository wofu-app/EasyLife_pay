<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="25dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:orientation="horizontal" >

    <TextView
        android:id="@+id/passenger_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:text="姓名"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/passenger_idcard"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="7"
        android:gravity="center"
        android:text="410328199101019633"
        android:singleLine="true"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/passenger_zuoweixibie"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="一等"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/passenger_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="成人票"
        android:textSize="10sp" />

    <Button
        android:id="@+id/passenger_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:layout_weight="2"
        android:background="@mipmap/train30"
        android:textColor="#ffffff"
        />

</LinearLayout>