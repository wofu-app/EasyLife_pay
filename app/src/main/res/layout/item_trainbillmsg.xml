<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="20dp"
              android:orientation="horizontal" >

    <TextView
        android:id="@+id/bill_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="姓名"
        android:textSize="10sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:singleLine="true"
        android:text="二代身份证"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/bill_Idcrad"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center"
        android:singleLine="true"
        android:text="410328188008088888"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/bill_startTime"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="2016-08-08"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/bill_start"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="出发地"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/bill_end"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="目的地"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/bill_trainNo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="车次"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/bill_zuoweixibie"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="座位席别"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/bill_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="票价"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/bill_fuwu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="服务费"
        android:textSize="10sp" />

</LinearLayout>