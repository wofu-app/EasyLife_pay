<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray_base"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="添加收货地址"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="600px"
        android:layout_height="40px"
        android:layout_marginTop="10dp"
        android:background="@drawable/shanp_edit"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="收货人："
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/address_edit_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入收货人姓名"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="600px"
        android:layout_height="40px"
        android:layout_marginTop="10dp"
        android:background="@drawable/shanp_edit"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="手机号："
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/address_edit_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:ems="10"
            android:hint="请输入收货人手机号"
            android:inputType="phone"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="600px"
        android:layout_height="40px"
        android:layout_marginTop="10dp"
        android:background="@drawable/shanp_edit"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="省市区："
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/address_edit_province"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:hint="请选择收货地址"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="600px"
        android:layout_height="40px"
        android:layout_marginTop="10dp"
        android:background="@drawable/shanp_edit"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="详细地址："
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/address_edit_addressdetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入详细地址"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/address_edit_postcode"
        android:layout_width="600px"
        android:layout_height="40px"
        android:layout_marginTop="10dp"
        android:background="@color/gray_base"
        android:text="确  定"
        android:textColor="@color/white"
        android:textSize="16sp"/>
</LinearLayout>

