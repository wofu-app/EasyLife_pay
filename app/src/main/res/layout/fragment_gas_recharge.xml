<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gasRechUI_parentfly"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@mipmap/bg_explorer">

        <LinearLayout
            android:layout_width="700px"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10px"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bg_global_logo"
                    android:contentDescription="@string/content_description"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gascard_recharge" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="20px"
                android:background="@mipmap/bg_global_left_normal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10px"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="10px"
                        android:text="充值卡号"
                        android:textColor="@color/txt_c1"
                        android:textSize="12sp"/>

                    <EditText
                        android:id="@+id/gasRechUI_cardNoEdit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20px"
                        android:hint="请输入您的卡号"
                        android:inputType="number"
                        android:background="@drawable/selector_background_edit"
                        android:textColor="@color/txt_c1"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10px"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="10px"
                        android:text="确认卡号"
                        android:textColor="@color/txt_c1"
                        android:textSize="12sp"/>

                    <EditText
                        android:id="@+id/gasRechUI_agianNoEdit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20px"
                        android:hint="请确认您的卡号"
                        android:inputType="number"
                        android:background="@drawable/selector_background_edit"
                        android:textColor="@color/txt_c1"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10px"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="10px"
                        android:text="手机号码"
                        android:textColor="@color/txt_c1"
                        android:textSize="12sp"/>

                    <EditText
                        android:id="@+id/gasRechUI_phoneEdit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20px"
                        android:hint="请输入您的手机号码"
                        android:inputType="phone"
                        android:background="@drawable/selector_background_edit"
                        android:textColor="@color/txt_c1"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10px"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="10px"
                        android:text="充值金额"
                        android:textColor="@color/txt_c1"
                        android:textSize="12sp"/>

                    <RadioGroup
                        android:id="@+id/gasRechUI_radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/gasRechUI_radioBtn1"
                            android:layout_width="60dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/selector_radio"
                            android:button="@null"
                            android:gravity="center"
                            android:text="100" />

                        <RadioButton
                            android:id="@+id/gasRechUI_radioBtn2"
                            android:layout_width="60dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/selector_radio"
                            android:button="@null"
                            android:gravity="center"
                            android:text="200" />

                        <RadioButton
                            android:id="@+id/gasRechUI_radioBtn3"
                            android:layout_width="60dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/selector_radio"
                            android:button="@null"
                            android:gravity="center"
                            android:text="500" />

                        <RadioButton
                            android:id="@+id/gasRechUI_radioBtn4"
                            android:layout_width="60dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/selector_radio"
                            android:button="@null"
                            android:gravity="center"
                            android:text="1000" />

                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageButton
                    android:id="@+id/gasRechUI_backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_background_back"
                    android:src="@mipmap/go_back"
                    android:contentDescription="@string/content_description"/>

                <ImageButton
                    android:id="@+id/gasRechUI_okBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/selector_background_ack"
                    android:src="@mipmap/go_ack"
                    android:contentDescription="@string/content_description"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="450px"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_global_phone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@mipmap/ad"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="120px"/>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>