<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray_base"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="沃富商城短信验证"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="600px"
        android:layout_height="60px"
        android:layout_marginTop="20dp"
        android:background="@drawable/shanp_edit"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="手机号："
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/noteVerifyUI_phoneEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="600px"
        android:layout_height="60px"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shanp_edit"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="验证码："
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/noteVerifyUI_codeEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textColor="@color/black"
                android:hint="请输入验证码"
                android:inputType="numberSigned"
                android:textSize="20sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/noteVerifyUI_codeBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/gray_base"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/noteVerifyUI_okBtn"
        android:layout_width="600px"
        android:layout_height="60px"
        android:layout_marginTop="30dp"
        android:background="@color/gray_base"
        android:text="提交验证"
        android:textColor="@color/white"
        android:textSize="20sp"/>
</LinearLayout>

