<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/payDetailsUI_payTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ali_logo" />

    <ImageView
        android:id="@+id/payDetailsUI_payImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:background="@mipmap/weixin_loading" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50px"
        android:background="@mipmap/pay_form_bag"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="商品名称" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="交易金额" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="商户名称"
                android:id="@+id/textView2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="2"
                android:text="订单号" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/payDetailsUI_goodsName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="商品名称" />

            <TextView
                android:id="@+id/payDetailsUI_dealMoney"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="交易金额" />

            <TextView
                android:id="@+id/payDetailsUI_shopName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="安徽沃富民生科技有限公司"/>

            <TextView
                android:id="@+id/payDetailsUI_orderNum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="2"
                android:text="订单号" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/payDetailsUI_cancelBtn"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:background="@mipmap/cancle_pay"
            android:layout_alignParentLeft="true"/>

        <Button
            android:id="@+id/payDetailsUI_completeBtn"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:background="@mipmap/entry_pay"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20px"
        android:text="@string/pay_native"
        android:textSize="16sp" />

</LinearLayout>