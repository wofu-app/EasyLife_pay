<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Pos.NoActionBar" parent="android:Theme.Light">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorPrimaryInverse">#ff0000</item>
    </style>

    <style name="bt_main">
        <item name="android:layout_width">166px</item>
        <item name="android:layout_height">166px</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bt_main_bg</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:textColor">#fff</item>
    </style>
    <!-- 继续按钮样式 -->
    <style name="continue_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_background_ack</item>
        <item name="android:gravity">center</item>
        <item name="android:src">@mipmap/go_continue</item>
    </style>
    <!-- 页面布局样式 -->
    <style name="page_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@mipmap/bg_explorer</item>
    </style>
    <!-- 屏幕布局样式 -->
    <style name="screen_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 屏幕左边布局样式 -->
    <style name="leftpart_layout_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 标题栏布局样式 -->
    <style name="headline_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 标题栏图标样式 -->
    <style name="headline_logo_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@mipmap/bg_global_logo</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:contentDescription">@string/content_description</item>
    </style>
    <!-- 标题栏文本样式 -->
    <style name="headline_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28sp</item>
    </style>
    <!-- 左侧操作区布局样式 -->
    <style name="leftoperation_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">455dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">36dp</item>
        <item name="android:background">@mipmap/bg_global_left_normal</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 文本行布局样式 -->
    <style name="text_layout_style">
        <item name="android:layout_width">550dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:gravity">left</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 编辑框样式 -->
    <style name="edit_style">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:background">@drawable/selector_background_edit</item>
    </style>
    <!-- 确认/返回按钮布局样式 -->
    <style name="button_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- 屏幕右侧广告低端文本样式 -->
    <style name="advbottom_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">108dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 左边按钮样式 -->
    <style name="left_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">28dp</item>
        <item name="android:background">@drawable/selector_background_back</item>
        <item name="android:gravity">center</item>
        <item name="android:src">@mipmap/go_back</item>
    </style>

    <!-- 右边按钮样式 -->
    <style name="right_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">28dp</item>
        <item name="android:background">@drawable/selector_background_ack</item>
        <item name="android:gravity">center</item>
        <item name="android:src">@mipmap/go_ack</item>
        <item name="android:contentDescription">@string/content_description</item>
    </style>
    <!-- 屏幕右边布局样式 -->
    <style name="rightpart_layout_style">
        <item name="android:layout_width">386dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">0</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 屏幕右侧客服电话布局样式 -->
    <style name="contact_layout_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@mipmap/bg_global_phone</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- 屏幕右侧广告文本样式 -->
    <style name="adv_style">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">450dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@mipmap/ad</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>
    <!-- 充值金额 -->
    <style name="mobile_style">
        <item name="android:background">@mipmap/radio_no</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
